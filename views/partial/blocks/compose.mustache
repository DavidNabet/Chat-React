<div style="position: sticky; bottom: 0; right: 0; left: 0;">
    <div class="box-compose" style="width: 100%;">
        <form class="box-compose_form" action="" method="POST">
            <div class="box-compose_form_header">
                <a class="avatar"></a>
                <textarea name="message-to-send" id="message-to-send" rows="3" placeholder="Enter your message"></textarea>
            </div>
            <div class="box-compose_form_footer">
                <div>
                    <i class="icon picture box-compose_form_footer_icon"></i>
                    <i class="icon attachment box-compose_form_footer_icon"></i>
                    <i class="icon emoji box-compose_form_footer_icon"></i>
                </div>
                <button type="submit">Send</button>
            </div>
        </form>
    </div>
</div>
